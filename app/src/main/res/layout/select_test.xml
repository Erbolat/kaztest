<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="kz.drw.kaztest.TestMainSelect">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layCorpusA"
            android:orientation="horizontal"
            android:background="#fff"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/acorpus"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/corpusA"
                android:paddingLeft="30dp"
                tools:ignore="RtlCompat"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layCorpusB"
            android:background="#fff"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/bcorpus"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"

                android:paddingLeft="30dp"
                tools:ignore="RtlCompat"
                android:text="@string/corpusB"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layTraining"
            android:background="#fff"
            android:orientation="horizontal"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/training"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                tools:ignore="RtlCompat"
                android:text="@string/training"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="#000" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>